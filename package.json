{
  "name": "files-combiner",
  "displayName": "File Combiner Pro",
  "description": "Combine contents of multiple selected files into one file / 合并多个选中文件的内容到一个文件中",
  "version": "0.0.3",
  "publisher": "rongsheng-li",
  "author": {
    "name": "Rongsheng Li",
    "email": "a916583011@gmail.com",
    "url": "https://github.com/Carolmelon"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "filesCombiner.combineFiles",
        "title": "Combine Selected File Contents"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "filesCombiner.combineFiles",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "mkdir -p dist && vsce package -o dist/"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}